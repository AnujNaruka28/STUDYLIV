{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",             // Your TypeScript source files
    "outDir": "./dist",             // Compiled JavaScript output

    /* Environment Settings */
    "module": "CommonJS",           // Use CommonJS for Node.js backend
    "target": "ES2020",             // Modern JS for Node 14+
    "lib": ["ES2020"],              // Include latest ECMAScript features
    "types": ["node", "express"],   // Adds Node.js & Express typings
    "allowJs": true,                  // Allow .js files as program inputs

    /* Other Outputs */
    "sourceMap": true,              // Generate .map files for debugging
    "declaration": true,            // Generate .d.ts type declaration files
    "declarationMap": true,

    /* Strict Type-Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Style Options */
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Type Definitions */
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],

    /* Recommended Settings */
    "esModuleInterop": true,        // Required for default imports like "import express from 'express'"
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],          // Include JS/TS files inside src/
  "exclude": ["node_modules", "dist"]
}
